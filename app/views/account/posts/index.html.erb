<div class="col-md-12">
  <h2 class="text-center"> 我發表過的文章 </h2>
  <table class="table">
    <thead>
      <tr>
        <th> Content </th>
        <th> Group Name </th>
        <th> Last Update </th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= render_content(post.content) %></td>
          <!--  <td><%= post.group.title %></td> -->
          <td><%= link_to(post.group.title,group_path(post.group)) %></td>
          <td><%= post.updated_at.to_s(:short) %></td>
          <td><%= link_to('Edit', edit_group_post_path(post.group, post, :from_account => true), class: "btn btn-info btn-xs") %></td>
          <td><%= link_to('Delete', group_post_path(post.group, post, :from_account => true), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>